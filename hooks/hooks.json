{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bun $CLAUDE_PLUGIN_ROOT/dist/hooks/post-tool-use.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bun $CLAUDE_PLUGIN_ROOT/dist/hooks/stop.js"
          }
        ]
      }
    ]
  }
}
